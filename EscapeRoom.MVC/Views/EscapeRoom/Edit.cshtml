@using EscapeRoom.Application.EscapeRoomReview.Commands.CreateEscapeRoomReview
@model EscapeRoom.Application.EscapeRoom.Commands.EditEscapeRoom.EditEscapeRoomCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja: @Model.Name </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">     
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="PhoneNumber" class="control-label">Numer telefonu</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="City" class="control-label">Miasto</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="PostalCode" class="control-label">Kod pocztowy</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="m-3">
    <partial name="_DeleteEscapeRoomReview" />
    <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
    <partial name="_CreateEscapeRoomReview" model="new CreateEscapeRoomReviewCommand() {EscapeRoomEncodedName = Model.EncodedName}" />
</div>

<h3>Recenzje: </h3>
<div id="reviews" class="row" data-encoded-name="@Model.EncodedName"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/EscapeRoom/Edit.js"></script>
}
