@model IEnumerable<EscapeRoom.Application.EscapeRoom.EscapeRoomDto>

@{
    ViewData["Title"] = "Escape Rooms";
}

<h1>Escape Rooms</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Utwórz nowy Escape Room</a>
</p>

<div class="row" >
    @foreach (var item in Model)
    {
        <div class="card mb-3" style="width: 19rem; margin: 10px; border-color:dimgrey;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                <p class="card-text">@item.Description</p>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-primary">Szczegóły</a>
                <a href="#" class="btn btn-outline-secondary">Edytuj</a>
            </div>
        </div>
    }
</div>