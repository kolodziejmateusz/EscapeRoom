<h1>Utwórz Escape Room</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/EscapeRoom/Create" method="post">

            <div class="form-group mb-3">
                <label class="control-label" for="Name">Nazwa</label>
                <input class="form-control" type="text" id="Name" name="Name" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Description">Opis</label>
                <input class="form-control" type="text" id="Description" name="Description" />
            </div>


            <div class="form-group mb-3">
                <label class="control-label" for="PhoneNumber">Numer telefonu</label>
                <input class="form-control" type="text" id="PhoneNumber" name="AddressDetails.PhoneNumber" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Street">Ulica</label>
                <input class="form-control" type="text" id="Street" name="AddressDetails.Street" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="City">Miasto</label>
                <input class="form-control" type="text" id="City" name="AddressDetails.City" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="PostalCode">Kod pocztowy</label>
                <input class="form-control" type="text" id="PostalCode" name="AddressDetails.PostalCode" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

